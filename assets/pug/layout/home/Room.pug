// room
.wrapperRoom
    .containerRoom.container
        .contentRoom
            .wrapperTitleSection
                h2.titleSection Room & Suite
                p.descriptionTitleSection
                    | Vipol Muine Hotel offers some kinds of rooms: Standard, Superior, Deluxe, Executive, Junior
                    | Suite and Suite.
            .wrapperListRoom
                ul.listRoom.row
                    each item in data.rooms
                        li.itemRoom.col-md-6.col-xl-4
                            .containerItemRoom
                                .wrapperImageRoom
                                    a.linkImageRoom(href= item.link title='Image Room')
                                        img.imageRoom(src= item.images alt='Room')
                                .wrapperNameRoom.backgroundColor1
                                    h3.nameRoom
                                        a.linkNameRoom(href= item.link title='Standard Room') Standard Room
                                .wrapperTextRoom
                                    p= item.sumary
                                .wrapperPriceRoom
                                    p.priceRoom.haveDiscount
                                        = item.priceOld
                                        span VNĐ
                                    p.priceRoom
                                        = item.priceCurrent
                                        span VNĐ
                                .wrapperButtonRoom
                                    a.buttonPrimary(href= item.link title='Room Detail')
                                        | See
                                        | More
                                    a.buttonPrimary-outline(href= item.link title='Book Now')
                                        | Book
                                        | Now
// end room
